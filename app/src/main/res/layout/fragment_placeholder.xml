<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:name="us.maxpowa.ircclient.fragment.PlaceholderFragment"
    tools:context="us.maxpowa.ircclient.fragment.PlaceholderFragment">

    <TextView
        android:drawableTop="@drawable/server_network"
        android:drawablePadding="14dp"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="@string/main_empty_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/textView" />

</LinearLayout>
